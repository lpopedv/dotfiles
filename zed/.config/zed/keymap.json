[
  {
    "context": "VimControl && !menu",
    "bindings": {
      "space c i": "editor::Hover",
      "space c a": "editor::ToggleCodeActions",
      "space c r": "editor::Rename",
      "space c e": "diagnostics::Deploy",
      "space space": "file_finder::Toggle",
      "space o p": "workspace::ToggleLeftDock",
      "space b b": "tab_switcher::Toggle",
      "space b s": "workspace::Save",
      "space l f": "outline::Toggle",
      "space c d s": "editor::GoToDefinitionSplit",
      "space c d": "editor::GoToDefinition",
      "space /": "editor::ToggleComments",
      "space g d": "editor::GoToDefinition",
      "space n t": "workspace::NewTerminal",
      "space t t": "workspace::NewCenterTerminal",
      "space t s": "terminal_panel::ToggleFocus",
      "space p p": "workspace::Open",
      "space f s": "zed::ToggleFullScreen",
      "space e b": "editor::ToggleTabBar",
      "space w v": "pane::SplitLeft",
      "space w s": "pane::SplitDown",
      "space w c": "pane::CloseActiveItem",
      "space k m": "zed::OpenKeymap",
      "space n f": "workspace::NewFile",
      "space f f": "editor::Format",
      "space .": "pane::DeploySearch",
      "space w l": ["workspace::ActivatePaneInDirection", "Right"],
      "space w h": ["workspace::ActivatePaneInDirection", "Left"],
      "space w j": ["workspace::ActivatePaneInDirection", "Down"],
      "space w k": ["workspace::ActivatePaneInDirection", "Up"]
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-l": "editor::MoveRight",
      "ctrl-h": "editor::MoveLeft",
      "ctrl-k": "editor::MoveUp",
      "ctrl-j": "editor::MoveLeft"
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      "space space": "file_finder::Toggle",
      "space .": "pane::DeploySearch",
      "space o t": "workspace::OpenTerminal",
      "space o p": "workspace::ToggleLeftDock",
      "space n f": "workspace::NewFile"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      "shift-k": "editor::MoveLineUp",
      "shift-j": "editor::MoveLineDown"
    }
  }
]
